<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.win.sampleproject.StartActivity">

    <TextView
        android:id="@+id/textdate"
        android:layout_width="90dp"
        android:layout_height="31dp"
        android:text="Date"
        android:textColor="@android:color/black"
        android:textSize="24sp"
        tools:layout_editor_absoluteX="2dp"
        tools:layout_editor_absoluteY="17dp" />

    <TextView
        android:id="@+id/date"
        android:layout_width="221dp"
        android:layout_height="51dp"
        android:layout_below="@+id/textdate"
        android:layout_marginTop="12dp"
        android:textSize="25sp"
        android:textColor="@android:color/black"
        android:textStyle="bold"
        android:textAlignment="center"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="71dp" />

    <Button
        android:id="@+id/buttondate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/date"
        android:layout_marginStart="25dp"
        android:layout_toEndOf="@+id/date"
        android:backgroundTint="@color/colorPrimary"
        android:text="Select Date"
        android:textColor="@android:color/white"
        tools:layout_editor_absoluteX="255dp"
        tools:layout_editor_absoluteY="84dp" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20sp"
        android:id="@+id/texttype"
        android:text="SelectType:"
        android:layout_below="@+id/buttondate"
        android:textSize="24sp"
        android:textColor="@android:color/black"
        />

    <Spinner
        android:id="@+id/complainttypespinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:textColor="@android:color/black"
        android:textStyle="bold"
        android:layout_below="@+id/texttype"
        android:layout_marginTop="30dp"
        android:padding="24sp"
        android:textAlignment="center" />


    <TextView
        android:id="@+id/textcomplaint"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:text="Complaint"
        android:textColor="@android:color/black"
        android:textSize="25sp"
        android:layout_below="@+id/complainttypespinner"
        tools:layout_editor_absoluteX="2dp"
        tools:layout_editor_absoluteY="181dp" />


    <EditText
        android:id="@+id/complaintposted"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textcomplaint"
        android:layout_marginTop="28dp"
        android:textColor="@android:color/black"
        android:ems="10"
        android:textSize="24sp" />

    <Button
        android:id="@+id/buttonsubmit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/complaintposted"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="48dp"
        android:backgroundTint="@color/colorAccent"
        android:text="Submit"
        android:textColor="@android:color/white"
        android:textSize="16sp"
        tools:layout_editor_absoluteX="139dp"
        tools:layout_editor_absoluteY="431dp" />
</RelativeLayout>
