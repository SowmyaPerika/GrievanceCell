<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.example.win.sampleproject.MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="19sp"
        android:text="Welcome to College Grievance Cell"
        android:textStyle="bold"
        android:textColor="@android:color/black"
        android:id="@+id/textView"
        android:layout_marginBottom="16dp"
        android:layout_above="@+id/login_btn"
        android:layout_centerHorizontal="true" />

    <Button
        android:id="@+id/start_reg_btn"
        android:layout_width="176dp"
        android:layout_height="wrap_content"
        android:text="Student Registration"
        android:backgroundTint="@android:color/black"
        android:textColor="@android:color/white"
        android:layout_above="@+id/admin_login"
        android:layout_alignLeft="@+id/login_btn"
        android:layout_alignStart="@+id/login_btn"
        android:layout_marginBottom="11dp" />

    <Button
        android:id="@+id/login_btn"
        android:layout_width="176dp"
        android:layout_height="wrap_content"
        android:text="Student Login"
        android:background="@color/colorAccent"
        android:textColor="@android:color/white"
        android:layout_marginBottom="11dp"
        android:layout_above="@+id/start_reg_btn"
        android:layout_centerHorizontal="true" />

    <Button
        android:id="@+id/admin_login"
        android:backgroundTint="@android:color/black"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="11dp"
        android:text="Admin Login"
        android:textColor="@android:color/white"
        android:layout_alignParentBottom="true"
        android:layout_alignLeft="@+id/start_reg_btn"
        android:layout_alignStart="@+id/start_reg_btn"
        android:layout_alignRight="@+id/start_reg_btn"
        android:layout_alignEnd="@+id/start_reg_btn" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/images"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_above="@+id/textView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
   <!-- app:srcCompat="@drawable/images"-->


</RelativeLayout>
